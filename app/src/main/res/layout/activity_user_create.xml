<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UserCEActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:textStyle="italic"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="TAO MOI NGUOI DUNG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="FirstName"
                android:text="FirstName"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/eLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="LastName"
                android:text="LastName"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/eDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Dob"
                android:text="2/2/2020"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/eEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:text="email24@gmail.com"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/ePhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="PhoneNumber"
                android:text="767676767"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/eUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="UserName"
                android:text="haiboi34"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/ePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:text="Password@123"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/eConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ConfirmPassword"
                android:text="Password@123"
                android:paddingLeft="16dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:text="Save" />

        </LinearLayout>

        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>